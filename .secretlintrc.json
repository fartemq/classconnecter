{
  "$schema": "https://json.schemastore.org/secretlintrc.json",
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend",
      "options": {}
    },
    {
      "id": "@secretlint/secretlint-rule-gcp",
      "options": {}
    },
    {
      "id": "@secretlint/secretlint-rule-privatekey",
      "options": {}
    },
    {
      "id": "@secretlint/secretlint-rule-preset-canary",
      "options": {}
    },
    {
      "id": "@secretlint/secretlint-rule-secp256k1-privatekey",
      "options": {}
    },
    {
      "id": "@secretlint/secretlint-rule-preset-recommend",
      "options": {}
    },
    {
      "id": "@secretlint/secretlint-rule-pattern",
      "options": {
        "patterns": [
          {
            "id": "openai-project-key",
            "pattern": "sk-proj-[A-Za-z0-9_-]{20,}"
          },
          {
            "id": "openai-legacy-key",
            "pattern": "sk-[A-Za-z0-9]{20,}"
          },
          {
            "id": "supabase-service-key",
            "pattern": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9\.[A-Za-z0-9_-]+\.[A-Za-z0-9_-]+"
          }
        ]
      }
    }
  ]
}